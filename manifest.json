{
    "manifest_version": 2,
    "name": "M Content Collector",
    "version": "1.0.0",
    "description": "For collecting contents",
    "short_name": "MCC",
    "background": {
        "page": "background.html",
        "persistent": true
      },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "permissions": ["chrome://favicon/", "activeTab", "declarativeContent", "storage", "contextMenus", "clipboardRead", "clipboardWrite", "<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["background.css"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_title": "Does a thing when you do a thing",
      "default_popup": "popup.html"
    }
}